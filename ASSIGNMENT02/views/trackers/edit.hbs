<h1>{{title}}</h1>

<form method="post" class="mb-3">

    <div class="container-sm">
    <fieldset class="mb-3">
        <label for="breakfast" class="form-label">What did you eat for Breakfast? 🥞</label>
        <input name="breakfast" id="breakfast" type="text" value="{{tracker.breakfast}}" class="form-control" required>
    </fieldset>
    <fieldset class="mb-3">
        <label for="lunch" class="form-label">What did you eat for Lunch? 🍔</label>
        <input name="lunch" id="lunch" type="text" value="{{tracker.lunch}}" class="form-control" required>
    </fieldset>
    <fieldset class="mb-3">
        <label for="dinner" class="form-label">What did you eat for Dinner? 🥗</label>
        <input name="dinner" id="dinner" type="text" value="{{tracker.dinner}}" class="form-control" required>
    </fieldset>
   <fieldset class="mb-3">
        <label for="date" class="form-label">Date 📅</label>
        <input name="date" id="date" type="date" value="{{tracker.date}}" class="form-control">
    </fieldset>
    <fieldset class="mb-3">
        <label for="distanceRan" class="form-label">Indicate distance you ran 🏃</label>
        <input name="distanceRan" id="distanceRan" value="{{tracker.distanceRan}}" type="text" class="form-control" required>
    </fieldset>

    <a href="/trackers" class="btn btn-secondary">Back</a>
    <button class="btn btn-primary">Save</button>
    
    </div>
</form>
