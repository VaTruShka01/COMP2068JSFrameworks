<style>
  footer{
    visibility: hidden;
  }
</style>


<h1 class="text-center">{{title}}</h1>
<div>

{{#if user}}
<div class="d-flex justify-content-center">
<a class="btn btn-secondary" href="/trackers/add">Create new Day Track </a>
</div>
{{/if}}

<table class="table table-dark table-hover m-3">
  <thead>
    <tr>
      <th scope="col">Breakfast 🥞</th>
      <th scope="col">Lunch 🍔</th>
      <th scope="col">Dinner 🥗</th>
      <th scope="col">Distance Ran (km) 🏃</th>
      <th scope="col">Calories Ate 😋</th>
      <th scope="col">Calories Burnt 🏋️</th>
      <th scope="col">Date 📅</th>
      <th scope="col"></th>

      
    </tr>
  </thead>
  <tbody>

    {{#each dataset}}

    <tr>
        <td scope="row">{{this.breakfast}}</td>
        <td scope="row">{{this.lunch}}</td>
        <td scope="row">{{this.dinner}}</td>
        <td scope="row">{{this.distanceRan}}</td>
        <td scope="row">{{this.caloriesAte}} </td>
        <td scope="row"></td>
        <td scope="row">{{this.date}}</td>

       {{#if ../user}} 
        <td>
            <a class="btn btn-secondary m-1" href="/trackers/edit/{{this._id}}">Edit</a>
            <a class="btn btn-danger m-1" onclick="return confirmDeletion()" href="/trackers/delete/{{this._id}}">Delete</a>
        </td>

      {{/if}}
        
    </tr>

    {{/each}}

    
  </tbody>
</table>


</div>